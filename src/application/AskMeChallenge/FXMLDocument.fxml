<GridPane 
   fx:controller="application.AskMeChallenge.FXMLDocumentController" xmlns:fx="http://javafx.com/fxml/1" 
   fx:id="layout"
   alignment="CENTER" hgap="10"    vgap="10"> 
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>
    
	<Text text="Please press on 'Ask Me' button." 
        GridPane.columnIndex="0" GridPane.rowIndex="0"
        GridPane.columnSpan="2"/>
 
    <Label fx:id="label" text="" alignment="bottom_center"
        GridPane.columnIndex="0" GridPane.rowIndex="2"/>
 
   
    <HBox spacing="10" alignment="bottom_center" 
        GridPane.columnIndex="0" GridPane.rowIndex="4">
        <Button text="Ask Me!"     
        onAction="#handleButtonAction"/>
    </HBox>

    <Text fx:id="actiontarget"
       GridPane.columnIndex="0" GridPane.columnSpan="2"
        GridPane.halignment="RIGHT" GridPane.rowIndex="6"/>
    </GridPane>